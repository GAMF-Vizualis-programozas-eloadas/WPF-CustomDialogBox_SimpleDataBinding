<Window x:Class="CustomDialogBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomDialogBox"
        mc:Ignorable="d"
        Title="Custom dialog box example" Height="450" Width="800">
	<DockPanel VerticalAlignment="Stretch" >
		<Menu x:Name="mnMain"	DockPanel.Dock="Top">
			<MenuItem Header="File">
				<MenuItem Header="Exit" Click="miExit_Click" />
			</MenuItem>
			<MenuItem x:Name="miData" Header="Data">
				<MenuItem x:Name="miNew" Header="New ..." Click="miNew_Click"/>
			</MenuItem>
		</Menu>
		<TextBox TextWrapping="Wrap" x:Name="tbMain" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" />
		
	</DockPanel>
</Window>
